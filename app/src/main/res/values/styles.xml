<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--........................................................-->
    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_title_bar</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <!--........................................................-->
    <style name="title_bar_icon">
        <item name="android:layout_width">@dimen/default_title_bar_icon</item>
        <item name="android:layout_height">@dimen/default_title_bar_icon</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>
    <!--........................................................-->

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">

        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>

        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>


    <style name="chip_select" parent="Widget.MaterialComponents.Chip.Choice">

        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/statusBar</item>
    </style>

    <style name="chip_unSelect" parent="Widget.MaterialComponents.Chip.Choice">

        <item name="backgroundTint">#f3f3f3</item>
        <item name="android:textColor">#363636</item>
    </style>


    <style name="social_button_style" parent="Widget.AppCompat.Button.Borderless">

        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/article_button_stroke</item>
        <item name="android:textColor">@color/Purple</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>


</resources>