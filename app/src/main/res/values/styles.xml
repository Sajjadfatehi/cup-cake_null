<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--........................................................-->
    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_title_bar</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <!--........................................................-->
    <style name="title_bar_icon">
        <item name="android:layout_width">@dimen/default_title_bar_icon</item>
        <item name="android:layout_height">@dimen/default_title_bar_icon</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>
    <!--........................................................-->

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">

        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>

        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>


    <style name="chip_select" parent="Widget.MaterialComponents.Chip.Choice">

        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/statusBar</item>
    </style>

    <style name="chip_unSelect" parent="Widget.MaterialComponents.Chip.Choice">

        <item name="backgroundTint">#f3f3f3</item>
        <item name="android:textColor">#363636</item>
    </style>


    <style name="social_button_style" parent="Widget.AppCompat.Button.Borderless">

        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/article_button_stroke</item>
        <item name="android:textColor">@color/Purple</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>

    <style name="tvInWriteArticle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="tvTitleInWriteArticle" parent="tvInWriteArticle">

        <item name="android:text">@string/tv_title_in_write_article</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


    <style name="tvTextInWriteArticle" parent="tvInWriteArticle">

        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:text">@string/tv_text_of_article</item>

    </style>


    <style name="tvKeywordInWriteArticle" parent="tvInWriteArticle">w

        <item name="android:text">@string/tv_keyword</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="edtInWriteArticle">

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColorHint">@color/hint_search</item>
        <item name="android:gravity">top</item>


    </style>

    <style name="editTextTitleInWriteArticle" parent="edtInWriteArticle">
        <item name="maxLines">5</item>
        <item name="android:lines">2</item>


    </style>

    <style name="editTextTextInWriteArticle" parent="edtInWriteArticle">
        <item name="maxLines">14</item>
        <item name="android:minLines">7</item>

    </style>

    <style name="editTextKeywordInWriteArticle" parent="edtInWriteArticle">
        <item name="maxLines">3</item>
        <item name="android:lines">2</item>
    </style>
    <!--............................................-->
    <style name="progressbar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <!--    <style name="materialBtn"-->


</resources>